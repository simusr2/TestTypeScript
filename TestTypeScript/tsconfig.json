{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "ES2018",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "types": [ "bootstrap", "filepond", "filepond-plugin-image-preview" ],
    "typeRoots": [
      "./node_modules",
      "./node_modules/@types"
    ],
    "outDir": "wwwroot/js"
  },
  "exclude": [
    "wwwroot"
  ],
  "include": [
    "Scripts"
  ]
}
